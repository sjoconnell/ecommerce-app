<h1>Add a new product</h1>

<%= form_tag '/products', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>  
  <div>
    <%= label_tag :image_1 %>
    <%= text_field_tag :image_1 %>
  </div>  
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <%= submit_tag "Add a product" %>

<% end %>